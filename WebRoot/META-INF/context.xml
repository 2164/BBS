<?xml version='1.0' encoding='utf-8'?>
<Context>
     <Resource 
         name="jdbc/OracleDataSource" 
         auth="Container"
         factory="org.apache.naming.factory.BeanFactory" 
         type="com.mchange.v2.c3p0.ComboPooledDataSource"
         driverClass="oracle.jdbc.OracleDriver"
